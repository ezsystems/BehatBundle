{
    "name": "ezsystems/behatbundle",
    "description": "Behat bundle for help testing eZ Bundles and projects",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "eZ Publish dev-team & eZ Community",
            "homepage": "https://github.com/ezsystems/BehatBundle/graphs/contributors"
        }
    ],
    "require": {
        "php": "^7.1",
        "ezsystems/ezpublish-kernel": "^7.5@dev",
        "fzaninotto/faker": "^1.8",
        "symfony/property-access": "^3.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~2.15.0",
        "phpunit/phpunit": "^7.0",
        "mikey179/vfsstream": "^1.6"
    },
    "autoload": {
        "psr-0": {"EzSystems\\BehatBundle": ""}
    },
    "target-dir": "EzSystems/BehatBundle",
    "scripts": {
        "fix-cs": "@php ./vendor/bin/php-cs-fixer fix -v --show-progress=estimating", 
        "test": "@php ./vendor/bin/phpunit -c phpunit.xml"
    },
    "extra": {
        "_ezplatform_branch_for_behat_tests": "2.5",
        "branch-alias": {
            "dev-master": "7.0.x-dev",
            "dev-tmp_ci_branch": "7.0.x-dev"
        }
    },

    "bin": ["bin/ezbehat", "bin/ezreport"]
}
